#;;; -*- mode: conf; -*-
##############################################
# Project repos (mine)
#
# Wanted Policies:
#  remote origin is private
#  remote gh is github
#  remote srht is sourcehut
##############################################
[DEFAULT]
setupmirror = git remote show mirror 2>/dev/null || git remote add mirror "git@github.com:benoitj/$(basename $(pwd)).git"
push = 
	 git push --mirror origin 
	 git push --mirror mirror

[blog.benoitj.ca]
checkout = git clone 'git@git.sr.ht:~benoit/blog.benoitj.ca' 'blog.benoitj.ca'

