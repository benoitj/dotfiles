#!/bin/sh

set -e

launch_tv() {
	selected="$(curl -s HDHR-1050AAD8/lineup.json | jq '.[] | (.GuideNumber + " "+ .GuideName)' | sed -e 's/"//g' | rofi -dmenu)"

	url="$(curl -s HDHR-1050AAD8/lineup.json | jq '.[] | select(.GuideNumber == "'${selected%% *}'")| .URL' | sed -e 's/"//g')"

	mpv "$url"
}

launch_tv
